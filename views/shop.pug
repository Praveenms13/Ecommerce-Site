extends layouts/main-layout.pug 

block styles
  link(rel="stylesheet", href="css/products.css")

block contentBody 
  main
      if prods.length > 0
        div.heading
          h1.mainMyProducts My Products
          p.mainList List of all Products..
        div.grid
          each product in prods 
            div.grid__item
              div.card
                img.card__img(src="https://cdn.shopify.com/s/files/1/0590/3830/2344/products/rich_dad_poor_dad_by_robert_t__1607410877_44fb96ac-768x1024.jpg?v=1659004008&width=1445", alt="Rich dad poor dad")
                div.card__content
                  h1.card__header #{product.title}
                  p.card__text
                    strong Price: #{"$10"}
                  button.card__btn
                    | Add to cart
                    span &rarr;
      else
        h1.NoProducts No Products.
