doctype html
html.no-js(lang="en")
  head
    meta(charset="UTF-8")
    title
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    meta(name="description", content="An example pen showing how a basic CSS Grid container can create a nice, responsive card layout.")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="css/shop.css")
    link(rel="stylesheet", href="css/products.css")
  body
    nav
      ul.navbar
        li.navbar__item
          a(href="/") Shop
        li.navbar__item
          a(href="/admin/add-product") Add Product
    main
      div.heading
        h1.mainMyProducts My Products
        p.mainList List of all Products..
      if prods.length > 0
        div.grid
          each product in prods 
            div.grid__item
              div.card
                img.card__img(src="https://cdn.shopify.com/s/files/1/0590/3830/2344/products/rich_dad_poor_dad_by_robert_t__1607410877_44fb96ac-768x1024.jpg?v=1659004008&width=1445", alt="Rich dad poor dad")
                div.card__content
                  h1.card__header #{product.title}
                  p.card__text
                    strong Price: #{"$10"}
                  button.card__btn
                    | Add to cart
                    span &rarr;
      else
        h1.NoProducts No Products.
