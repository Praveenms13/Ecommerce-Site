<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="FORM">
        <form class="tag" action="/admin/<% if(editing) { %>edit-product<% } else {%>add-product<%}%>" method="POST">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter Title here:</span>
                <input type="text" name="title" id="title" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" value="<% if(editing) { %><%=product.title%><% } %>">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter Product Name here:</span>
                <input type="text" name="prodname" id="name" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" value="<% if(editing) { %><%=product.prodname%><% } %>">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter Image Url here:</span>
                <input type="text" name="imageUrl" id="imageUrl" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" value="<% if(editing) { %><%=product.imageUrl%><% } %>">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter Price Here:</span>
                <input type="number" name="price" id="price" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" step="0.01" value="<% if(editing) { %><%=product.price%><% } %>">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter quantity Here:</span>
                <input type="text" name="quantity" id="quantity" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" step="0.01" value="<% if(editing) { %><%=product.quantity%><% } %>">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Enter Discount Here:</span>
                <input type="number" name="discount" id="discount" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" step="0.01" value="<% if(editing) { %><%=product.discount%><% } %>">
            </div>
            <div class="input-group">
                <span class="input-group-text">With textarea</span>
                <textarea name="description" id="description" rows="5" class="form-control"
                    aria-label="With textarea" ><% if(editing) { %><%=product.description%><% } %></textarea>
            </div><br></br>
            <div class="row justify-content-md-center">
                <div class="col-md-auto">
                    <button class="btn btn-success" type="submit"><% if(editing) { %>Update Product<% } else {%>Add Product<%}%></button>
                </div>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
            <% } %>
        </form>
    </main>
</body>

<%- include('../includes/end.ejs') %>
