<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/products.css" />
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
        <div class="row justify-content-center">
            <div class="col-md-auto">
                <h1 class="mainMyProducts">My Products</h1>
            </div>
        </div>
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-md-auto">
                    <p>List of all Products..</p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <% for(let product of prods){ %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top"
                            src="<%= product.imageUrl %>"
                            alt="<%= product.title %>" />
                        <div class="card-body">
                            <h5 class="card-title"><%= product.title %></h5>
                            <p class="card-text">
                                <strong>Rs. <%= product.price%></strong><br>
                                <strong><%= product.description%></strong>
                            </p>
                            <a class="btn btn-success" href="edit-product">Edit<span></span></a>
                            <br></br>
                            <form action='delete-product' method='post'>
                                <a class="btn btn-danger" type='submit'>Delete<span></span></a>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="row justify-content-center">
            <div class="col-md-auto">
                <h1 class="mainMyProducts">No Products are listed here</h1>
            </div>
        </div>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
</body>
