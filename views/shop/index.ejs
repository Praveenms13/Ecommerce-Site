<%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/products.css" />
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <p>from ejs</p>
        <main>
            <% if (prods.length > 0) { %>
                <div class="heading">
                    <h1 class="mainMyProducts">My Products</h1>
                    <p class="mainList">List of all Products..</p>
                </div>
                <div class="grid">
                    <% for(let product of prods){ %>
                        <div class="grid__item">
                            <div class="card">
                                <img
                                    class="card__img"
                                    src="https://cdn.shopify.com/s/files/1/0590/3830/2344/products/rich_dad_poor_dad_by_robert_t__1607410877_44fb96ac-768x1024.jpg?v=1659004008&amp;width=1445"
                                    alt="Rich dad poor dad"
                                />
                                <div class="card__content">
                                    <h1 class="card__header"><%= product.title %></h1>
                                    <p class="card__text">
                                        <strong>Price: $10</strong>
                                    </p>
                                    <button class="card__btn">Add to cart<span>&rarr;</span></button>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="heading">
                    <h1 class="mainMyProducts">No Products are listed....</h1>
                </div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %></body>