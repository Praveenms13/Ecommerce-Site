<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/products.css" />
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
    <% if (prods.length > 0) { %>
    <div class="row justify-content-center">
        <div class="col-md-auto text-center">
            <h1 class="mainMyProducts">List of all Products</h1>
        </div>
    </div>
    <br><br></br>
    <div class="container">
        <div class="row">
            <% for(let product of prods){ %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top"
                        src="<%= product.imageUrl %>"
                        alt="<%= product.name %>" />
                    <div class="card-body">
                        <h5 class="card-title mb-2"><%= product.prodname %></h5>
                        <p class="card-text mb-2">
                            <strong>Rs. <%= product.price %> for <%= product.quantity %></strong><br>
                            <small><%= product.description %></small>
                        </p>
                        <form action='/add-to-cart' method='POST'>
                            <button class="btn btn-primary btn-block mt-2">Add to cart <span>&rarr;</span></button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <% } else { %>
    <div class="row justify-content-center">
        <div class="col-md-auto text-center">
            <h1 class="mainMyProducts">No Products are listed here</h1>
        </div>
    </div>
    <% } %>
</main>

    <%- include('../includes/end.ejs') %>
</body>
